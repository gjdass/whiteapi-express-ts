{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "App debug",
            "program": "${workspaceRoot}/src/index.ts",
            "cwd": "${workspaceRoot}",
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "env": { "NODE_ENV": "debug" }
        },
        {
			"type": "node",
            "request": "launch",
			"name": "Mocha debug",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["--reporter", "spec", "--timeout", "0", "${workspaceRoot}/dist/*.spec.js", "${workspaceRoot}/dist/**/*.spec.js"],
			"cwd": "${workspaceRoot}",
			"stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/**/*.spec.js"
            ],
            "env": { "NODE_ENV": "test"}
        }
    ]
}